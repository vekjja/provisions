alias gl="git log"
function gsquash() {
  git reset $(git merge-base ${1} HEAD)
  git add -A
  git commit -m ${2}
}
function gprune() {
  git fetch origin
  git fetch --prune origin
  git branch --merged | egrep -v "(^\*|master|main)" | xargs git branch -d
}
function gpa() {
  git add --all
  git commit -am ${1}
  git push
}

