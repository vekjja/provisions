### HTTP ###
http-server() {
  local port=9999 # default port
  local dir="./"  # default directory

  while [[ "$#" -gt 0 ]]; do
    case $1 in
    -p | --port)
      port="$2"
      shift
      ;;
    -d | --dir)
      dir="$2"
      shift
      ;;
    *)
      echo "Unknown parameter passed: $1"
      return 1
      ;;
    esac
    shift
  done

  python3 -m http.server ${port} --directory ${dir}
}

