function kexec() {
  pod=$(kgp | grep ${1} | awk '{print $1}')
  kubectl exec -it ${pod} -c ${2} -- bash
}

function kgrep() {
  delete=""
  resource=""
  pattern=""
  namespace=""

  optspec="p:r:n:d"
  while getopts "$optspec" optchar; do
    case "${optchar}" in
    p)
      pattern=${OPTARG}
      ;;
    r)
      resource=${OPTARG}
      ;;
    n)
      namespace="-n${OPTARG}"
      ;;
    d)
      delete="true"
      ;;
    *)
      echo "Must Provide Proper Values!"
      ;;
    esac
  done

  resources=$(kg ${resource} ${namespace} --no-headers=true | awk '/'${pattern}'/{print $1}')
  echo ${resources}
  echo

  if [[ -n ${delete} ]]; then
    echo â˜ ï¸ Deleting Resources
    echo ${resources} | xargs kubectl delete ${namespace} ${resource}
  fi
}

